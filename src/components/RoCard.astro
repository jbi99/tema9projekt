---
import Button from "../components/Button.astro";
const { img, text1, subtitle, text2, text3, text4, text5, tag } = Astro.props;
---

<article class="grid">
  <div>
    <img src={img} />
  </div>
  <div>
    <p class="subtitle">{subtitle}</p>
    <p>{text1}</p>
    <p>{text2}</p>
    <p>{text3}</p>
    <p>{text4}</p>
    <p>{text5}</p>
<Button text="BOOK HER" href="/content/placeholder" />

  <button></button>    </div>
</article>

<style>
  img {
    max-width: 100%;
  }

  .subtitle {
    font-size: 25px;
    font-weight: bold;
  }

  p {
    padding: 10px;
    font-size: 20px;
  }

 
        @media (min-width: 800px) {

  .grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  
</style>
